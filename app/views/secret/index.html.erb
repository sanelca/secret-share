
<%= form_for @secret, url: secrets_path do |f| %>
  <%= f.text_area :message, placeholder: "Put your secret message here!" %>
  <%= f.submit "Post", class: 'btn btn-primary' %>
<% end %>

<% @secrets.each do |p| %>
  <div>URL: <%= request.base_url %>/secrets/<%= p.public_uid %></div>
  </br></br>
<% end %>
